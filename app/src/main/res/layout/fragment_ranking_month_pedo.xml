<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray_project">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/rank1_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:fontFamily="@font/nanumsquareroundeb"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!--프로필 사진-->
        <ImageView
            android:id="@+id/rank1_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/profile_default" />

        <!--UserID-->

        <TextView
            android:id="@+id/rank1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nanumsquareroundeb"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="나이스러너"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TableLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:stretchColumns="*">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/rank1_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="123,456"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:gravity="right"
                    android:text="걸음"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </TableRow>
        </TableLayout>


    </LinearLayout>

    <!--구분선-->
    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#aaa"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/month_pedo_recycler"
        android:layout_width="409dp"
        android:layout_height="835dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>