<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_project"
    tools:context=".Main.MyPageIdentifyFragment"
    android:orientation="vertical">
    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_mypage"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_default"
                />

            <TextView
                android:id="@+id/IdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="asdf"
                android:textColor="@color/white"
                android:fontFamily="@font/nanumsquareroundeb"
                android:textSize="25sp"/>

        </LinearLayout>



        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계속하려면 먼저 본인임을 인증하세요."
            android:textSize="15sp"
            android:fontFamily="@font/nanumsquareroundeb"
            android:textColor="@color/white" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pwTextInputLayout"
            style="@style/EditTextStyle"
            android:backgroundTint="@color/green_project"
            android:textColor="@color/green_project"
            app:boxStrokeColor="@color/green_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextStyle"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/loginPwTxt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:hint="@string/pw"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style_with_ripple"
            android:text="확인"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumsquareroundeb"
            android:textSize="16sp"/>




    </LinearLayout>






</LinearLayout>