<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_project">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_mypage"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/view_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/profile_default"
                app:civ_border_color="@color/lightgray_project"
                app:civ_border_overlay="true"
                app:civ_border_width="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2" />

            <TextView
                android:id="@+id/mypageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="myID"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

            <Button
                android:id="@+id/mypageEditBtn"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/btn_style2"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="편집"
                android:textColor="@color/whitegray_project"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2"
                tools:ignore="TouchTargetSizeCheck" />

            <com.ramotion.foldingcell.FoldingCell
                android:id="@+id/folding_cell"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:animationDuration="1000"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:backSideColor="@color/lightgray_project"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/mypageId">

                <LinearLayout
                    android:id="@+id/cell_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_style"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/heightTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:text="키 : "
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/weightTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:text="몸무게 : "
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/bmiTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:text="bmi : "
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_bmi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                        <ImageView
                            android:id="@+id/bmi_marker"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="-3dp"
                            android:src="@drawable/bmi_marker"
                            app:layout_constraintBottom_toTopOf="@+id/imageView9"
                            app:layout_constraintEnd_toStartOf="@+id/guideline_bmi"
                            app:layout_constraintStart_toStartOf="@+id/guideline_bmi" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/bmi_bar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bmi_explain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquareroundeb"
                            android:text=""
                            android:textColor="#AFAFAF"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toStartOf="@+id/textView"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquareroundeb"
                            android:text=" 입니다"
                            android:textColor="#AFAFAF"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/bmi_explain"
                            app:layout_constraintTop_toBottomOf="@+id/imageView9" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cell_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_style"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_round_expand_more_24" />
                </LinearLayout>

            </com.ramotion.foldingcell.FoldingCell>

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/view_style"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/folding_cell" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="최고기록"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/view4" />

            <ImageView
                android:id="@+id/mypage_walkBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/view4"
                app:srcCompat="@drawable/walk_over" />

            <TextView
                android:id="@+id/maxStep"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text=""
                android:textColor="@color/white"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_walkBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_walkBtn"
                app:layout_constraintTop_toBottomOf="@+id/mypage_walkBtn" />

            <TextView
                android:id="@+id/stepTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="걸음"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_walkBtn"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="@+id/mypage_walkBtn"
                app:layout_constraintTop_toBottomOf="@+id/maxStep" />

            <TextView
                android:id="@+id/maxStepTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="최대 걸음"
                android:textColor="@color/whitegray_project"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/stepTxt"
                app:layout_constraintStart_toStartOf="@+id/stepTxt"
                app:layout_constraintTop_toBottomOf="@+id/stepTxt" />

            <ImageView
                android:id="@+id/mypage_kmBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="60dp"
                app:layout_constraintEnd_toEndOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/view4"
                app:srcCompat="@drawable/km_over" />

            <TextView
                android:id="@+id/maxKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text=""
                android:textColor="@color/white"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_kmBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_kmBtn"
                app:layout_constraintTop_toBottomOf="@+id/mypage_kmBtn" />

            <TextView
                android:id="@+id/kmTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="거리"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_kmBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_kmBtn"
                app:layout_constraintTop_toBottomOf="@+id/maxKm" />

            <TextView
                android:id="@+id/maxKmTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="최대 거리"
                android:textColor="@color/whitegray_project"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_kmBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_kmBtn"
                app:layout_constraintTop_toBottomOf="@+id/kmTxt" />

            <ImageView
                android:id="@+id/mypage_kcalBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="115dp"
                app:layout_constraintBottom_toBottomOf="@+id/view4"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:srcCompat="@drawable/kcal_over" />

            <TextView
                android:id="@+id/maxKcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text=""
                android:textColor="@color/white"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_kcalBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_kcalBtn"
                app:layout_constraintTop_toBottomOf="@+id/mypage_kcalBtn" />

            <TextView
                android:id="@+id/kcalTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="칼로리 소모량"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_kcalBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_kcalBtn"
                app:layout_constraintTop_toBottomOf="@+id/maxKcal" />

            <TextView
                android:id="@+id/maxKcalTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="최대 칼로리"
                android:textColor="@color/whitegray_project"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_kcalBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_kcalBtn"
                app:layout_constraintTop_toBottomOf="@+id/kcalTxt" />

            <ImageView
                android:id="@+id/mypage_timeBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="115dp"
                app:layout_constraintBottom_toBottomOf="@+id/view4"
                app:layout_constraintEnd_toEndOf="@+id/view4"
                app:srcCompat="@drawable/time_over" />

            <TextView
                android:id="@+id/maxTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text=""
                android:textColor="@color/white"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_timeBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_timeBtn"
                app:layout_constraintTop_toBottomOf="@+id/mypage_timeBtn" />

            <TextView
                android:id="@+id/timeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="운동시간"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_timeBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_timeBtn"
                app:layout_constraintTop_toBottomOf="@+id/maxTime" />

            <TextView
                android:id="@+id/maxTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="최대 시간"
                android:textColor="@color/whitegray_project"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/mypage_timeBtn"
                app:layout_constraintStart_toStartOf="@+id/mypage_timeBtn"
                app:layout_constraintTop_toBottomOf="@+id/timeTxt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

