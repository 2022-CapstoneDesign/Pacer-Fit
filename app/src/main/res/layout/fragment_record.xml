<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="411dp"
        android:layout_height="519dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp">


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="시간"
            android:textColor="#000000"
            android:textSize="25dp" />

        <!--Hour-->
        <TextView
            android:id="@+id/hourTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="48dp"

            android:text="0"
            android:textColor="#000000"
            android:textSize="50dp" />

        <!--min-->
        <TextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="47dp"
            android:layout_toEndOf="@+id/hourTextView"
            android:text="시"
            android:textColor="#000000"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="161dp"
            android:layout_toEndOf="@+id/minTextView"
            android:text="분"
            android:textColor="#000000"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/minTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="173dp"
            android:layout_marginTop="48dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="50dp" />

        <!--sec-->
        <TextView
            android:id="@+id/secTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/sec"
            android:text="0"
            android:textColor="#000000"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="30dp"
            android:text="초"
            android:textColor="#000000"
            android:textSize="50dp" />


        <View
            android:id="@+id/boundaryLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/min"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorMAIN" />


        <TextView
            android:id="@+id/avgSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boundaryLine"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="평균속도(km/h)"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/averageSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avgSpeed"

            android:layout_centerInParent="true"
            android:text="0.00"
            android:textColor="#000000"
            android:textSize="50dp" />


        <View
            android:id="@+id/boundaryLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/averageSpeed"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorMAIN" />


        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boundaryLine2"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="거리(km)"
            android:textColor="#000000"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/distanceKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_centerInParent="true"
            android:layout_marginStart="150dp"
            android:text="0.00"
            android:textColor="#000000"
            android:textSize="50dp" />


        <View
            android:id="@+id/boundaryLine3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/distanceKm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorMAIN" />

        <TextView
            android:id="@+id/recordPedometerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boundaryLine3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="걸음 수"
            android:textColor="#000000"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/recordPedometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordPedometerTextView"

            android:layout_centerInParent="true"
            android:layout_marginStart="150dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="50dp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="191dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/locTest"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:hint="위도 경도 표시"
                android:text=""
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/accTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="정확도 표시"
                android:text=""
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>