<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gray_project">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:contentDescription="@string/app_name"
            android:paddingStart="6dp"
            android:src="@drawable/toolbar_icon" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/jalnan"
            android:text="@string/pedometer"
            android:textColor="@color/skyblue_project"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="28dp"
            android:fontFamily="@font/jalnan"
            android:text="운동"
            android:textColor="@color/purple_project"
            android:textSize="20sp"
            android:textStyle="italic" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/toolbar"
        android:background="@color/lightgray_line"></View>
</LinearLayout>